<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spide_Tech_App.StartPage"
             Title="StartPage">
    <VerticalStackLayout BackgroundColor="DimGray" Padding="30" Spacing="30" HorizontalOptions="Center">
        <Label
            Text="Welcome To AutoSpiders"
            HorizontalOptions="Center"
           />
        <Button
    Text="Let's Begin"
            BackgroundColor="Black"
            TextColor="Yellow"
    HorizontalOptions="Center"
            MaximumHeightRequest="100"
            MaximumWidthRequest="200"
            Clicked="OnStart"
   />
    </VerticalStackLayout>
</ContentPage>