<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spide_Tech_App.Tow_Truck"
             Title="Tow_Truck">
    <VerticalStackLayout>
        <Label 
            Text="You may request Tow Truck here!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image Source="towtruck.jpg"  HorizontalOptions="Center" MaximumHeightRequest="200" MaximumWidthRequest="500"/>
        <Button BackgroundColor="Black" Text="Request Tow Truck"
                TextColor="Yellow"
                HorizontalOptions="CenterAndExpand"
                Clicked="OnTruck"
        />
    </VerticalStackLayout>
</ContentPage>