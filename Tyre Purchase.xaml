<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spide_Tech_App.Tyre_Purchase"
             Title="Tyre_Purchase">
    <VerticalStackLayout  BackgroundColor="DimGray" Padding="30" Spacing="20" >
        <Label 
             Text="Get Your tyres here at Spider Tech"
            TextColor="Black"
            BackgroundColor="DimGray"
 Style="{StaticResource Headline}"
 SemanticProperties.HeadingLevel="Level1" />
        <SearchBar Placeholder="Search tyre here" PlaceholderColor="WhiteSmoke" WidthRequest="300"></SearchBar>
        <Image Source="tyresize.jpg" WidthRequest="500" />

    </VerticalStackLayout>
</ContentPage>
    