<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spide_Tech_App.CarWash"
             Title="CarWash">
    <VerticalStackLayout BackgroundColor="DimGrey" Padding="30" Spacing="20">
        <Label 
            Text="Get your Washed
            
            !"
            FontFamily="Italiac"
            FontSize="Header"
            HorizontalOptions="CenterAndExpand"
            />
        <Image Source="carwash.jpg"  HorizontalOptions="CenterAndExpand"/>
		
		 <Picker
            x:Name="wash"

            HorizontalOptions="Center"
 >
 <Picker.ItemsSource>
 <x:Array Type="{x:Type x:String}">
 <x:String> Regular Wash </x:String>
 <x:String> Full Wassh </x:String>
 <x:String> Rinse</x:String>
 <x:String> Wash and Polish </x:String>
 </x:Array>
 
 </Picker.ItemsSource>
 
 </Picker>
<Button x:Name="btnBackB"
                BackgroundColor="Black"
                
                HorizontalOptions="Center"
                VerticalOptions="Center"
TextColor="Yellow"
 Text="Go back"/>
    </VerticalStackLayout>
</ContentPage>